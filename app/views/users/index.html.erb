<% if current_user %>
	<%= render 'partials/new_form' %>
<%end%>

<div class='panel left'>
	<h1>Public Profiles</h1>
	<% @users.each do |user| %>
		<div class='ribbitWrapper'>
			<a href="<%= user_path user %>">
				<img class='avatar' src="<%= user.avatar_url%>">
				<span class='name'><%= user.name %></span>
			</a>
			@<%= user.username %>
			<p>
				<%= pluralize(user.ribbits.length, 'Ribbit') %>
				<span class='spacing'><%= pluralize(user.followers.length,'Follower')%></span>
				<span class='spacing'><%= user.followeds.length %> Following</span>
			</p>
			<% if user.bio %>
				<p><%= user.bio %></p>
			<% elseif user.ribbits.first %>
				<p>
					<%= user.ribbits.first.content %>
				</p>
			<% end %>
		</div>
	<%end%>

</div>

