<div class='panel left'>
	<h1>Edit Profile</h1>
	<%= form_for @user do |f| %>
		<% if @user.errors.any? %>
			<ul>
				<% @user.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<%end%>
			</ul>
		<%end%>
		<%= f.label :name %>
		<%= f.text_field :name %>

		<%= f.label :username %>
		<%= f.text_field :username %>

		<%= f.label :email %>
		<%= f.email_field :email%>

		<%= f.label :bio %>
		<%= f.text_area :bio %>

		<%= f.label :password %>
		<%= f.password_field :password %>

		<%= f.label :password_confirmation, 'Confirm' %>
		<%= f.password_field :password_confirmation %>

		<%= f.submit %>
	<% end %>
</div>